<%- include('partials/header') -%>

<h1>Home</h1>
<p>
    <%= homeContent %>
</p>

<% blog_posts.forEach(function(element){ %>

    <div>
        <h2>
            <%= element.title%>
        </h2>
        <p>
            <%= element.content.substring(0, 100)+ ' ...'%> 
            <a href= "/posts/<%= element.title %>"> Read More </a>
        </p>
    </div>

<% }); %>

<%- include('partials/footer') -%>