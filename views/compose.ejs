<%- include('partials/header') -%>

<h1>Compose</h1>

<form action="/compose" method="post">

    <div class="form-group">
      <label for="blog_title">Title</label>
      <input type="text" name="blog_title" class="form-control" id="blog_title" placeholder="Blog Title">
    </div>

    <div class="form-group">
      <label for="blog_post">Post</label>
      <textarea name="blog_data" rows="6" type="text" class="form-control" id="blog_post" placeholder="Your Blog"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

<%- include('partials/footer') -%>